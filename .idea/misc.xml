</project>/* FirstScan Pro - Styles */

/* Reset and Base Styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

:root {
    /* Dark Theme Colors */
    --bg-primary: #0f1419;
    --bg-secondary: #1a1f2e;
    --bg-tertiary: #252d3d;
    --text-primary: #ffffff;
    --text-secondary: #8b92a5;
    --accent-blue: #2563eb;
    --accent-red: #dc2626;
    --accent-green: #16a34a;
    --accent-orange: #ea580c;
    --border-color: #2d3748;
    --shadow: rgba(0, 0, 0, 0.3);
}

body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    background: var(--bg-primary);
    color: var(--text-primary);
    line-height: 1.6;
    min-height: 100vh;
}

.container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
}

/* Header */
.header {
    background: var(--bg-secondary);
    border-bottom: 2px solid var(--accent-blue);
    padding: 15px 0;
    position: sticky;
    top: 0;
    z-index: 1000;
    box-shadow: 0 4px 6px var(--shadow);
}

.header-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 20px;
}

.logo {
    display: flex;
    align-items: center;
    gap: 10px;
    font-size: 24px;
    font-weight: bold;
    color: var(--accent-blue);
}

.logo i {
    font-size: 28px;
}

.nav {
    display: flex;
    gap: 10px;
    flex-wrap: wrap;
}

.nav-btn {
    background: transparent;
    border: 1px solid var(--border-color);
    color: var(--text-secondary);
    padding: 10px 20px;
    border-radius: 6px;
    cursor: pointer;
    font-size: 14px;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 8px;
}

.nav-btn:hover {
    background: var(--bg-tertiary);
    color: var(--text-primary);
    border-color: var(--accent-blue);
}

.nav-btn.active {
    background: var(--accent-blue);
    color: white;
    border-color: var(--accent-blue);
}

.subscription-badge .badge {
    padding: 8px 16px;
    border-radius: 20px;
    font-size: 12px;
    font-weight: 600;
}

.badge-warning {
    background: var(--accent-orange);
    color: white;
}

/* Main Content */
.main {
    padding: 30px 0;
    min-height: calc(100vh - 200px);
}

.tab-content {
    display: none;
}

.tab-content.active {
    display: block;
    animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
}

/* Grid Layouts */
.grid-2col {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(500px, 1fr));
    gap: 20px;
}

@media (max-width: 1100px) {
    .grid-2col {
        grid-template-columns: 1fr;
    }
}

/* Cards */
.card {
    background: var(--bg-secondary);
    border: 1px solid var(--border-color);
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 4px 6px var(--shadow);
}

.card-header {
    background: var(--bg-tertiary);
    padding: 15px 20px;
    border-bottom: 1px solid var(--border-color);
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.card-header h2 {
    font-size: 18px;
    display: flex;
    align-items: center;
    gap: 10px;
}

.card-body {
    padding: 20px;
}

.mt-20 {
    margin-top: 20px;
}

/* Form Controls */
.form-group {
    margin-bottom: 20px;
}

.form-group label {
    display: block;
    margin-bottom: 8px;
    color: var(--text-secondary);
    font-size: 14px;
}

.form-control {
    width: 100%;
    padding: 12px;
    background: var(--bg-tertiary);
    border: 1px solid var(--border-color);
    border-radius: 6px;
    color: var(--text-primary);
    font-size: 14px;
}

.form-control:focus {
    outline: none;
    border-color: var(--accent-blue);
}

/* Current Channel Display */
.current-channel {
    background: var(--bg-tertiary);
    padding: 20px;
    border-radius: 8px;
    margin-bottom: 20px;
    border: 1px solid var(--border-color);
}

.channel-info h3 {
    font-size: 20px;
    margin-bottom: 5px;
    color: var(--accent-blue);
}

.channel-info p {
    color: var(--text-secondary);
    font-size: 14px;
}

.channel-stats {
    margin-top: 10px;
    color: var(--text-secondary);
    font-size: 13px;
}

/* Audio Visualizer */
.audio-visualizer {
    display: flex;
    align-items: flex-end;
    justify-content: center;
    gap: 4px;
    height: 60px;
    margin: 20px 0;
    padding: 10px;
    background: var(--bg-primary);
    border-radius: 6px;
}

.visualizer-bar {
    width: 8px;
    background: var(--accent-blue);
    border-radius: 4px;
    transition: height 0.1s ease;
    height: 10px;
}

.visualizer-bar.active {
    animation: pulse 0.5s ease infinite alternate;
}

@keyframes pulse {
    0% { height: 10px; }
    100% { height: 50px; }
}

/* Player Controls */
.player-controls {
    display: flex;
    justify-content: center;
    gap: 15px;
    margin: 20px 0;
}

.btn-control {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    border: none;
    background: var(--accent-blue);
    color: white;
    cursor: pointer;
    font-size: 18px;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
}

.btn-control:hover:not(:disabled) {
    transform: scale(1.1);
    box-shadow: 0 4px 12px rgba(37, 99, 235, 0.4);
}

.btn-control:disabled {
    opacity: 0.5;
    cursor: not-allowed;
}

.btn-record {
    background: var(--accent-red);
}

.btn-record:hover:not(:disabled) {
    box-shadow: 0 4px 12px rgba(220, 38, 38, 0.4);
}

.btn-record.recording {
    animation: recordPulse 1s ease infinite;
}

@keyframes recordPulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.6; }
}

/* Volume Control */
.volume-control {
    display: flex;
    align-items: center;
    gap: 15px;
    padding: 15px;
    background: var(--bg-tertiary);
    border-radius: 6px;
}

.volume-control i {
    color: var(--text-secondary);
}

.slider {
    flex: 1;
    height: 6px;
    border-radius: 3px;
    background: var(--bg-primary);
    outline: none;
    -webkit-appearance: none;
}

.slider::-webkit-slider-thumb {
    -webkit-appearance: none;
    appearance: none;
    width: 18px;
    height: 18px;
    border-radius: 50%;
    background: var(--accent-blue);
    cursor: pointer;
}

.slider::-moz-range-thumb {
    width: 18px;
    height: 18px;
    border-radius: 50%;
    background: var(--accent-blue);
    cursor: pointer;
    border: none;
}

#volume-value {
    color: var(--text-secondary);
    font-size: 14px;
    min-width: 40px;
}

/* Recording Indicator */
.recording-indicator {
    color: var(--accent-red);
    font-weight: 600;
    display: none;
    align-items: center;
    gap: 8px;
}

.recording-indicator.active {
    display: flex;
}

.recording-indicator i {
    animation: blink 1s ease infinite;
}

@keyframes blink {
    0%, 50% { opacity: 1; }
    51%, 100% { opacity: 0; }
}

/* Channel List */
.channel-list {
    max-height: 500px;
    overflow-y: auto;
}

.channel-item {
    padding: 15px;
    background: var(--bg-tertiary);
    border: 1px solid var(--border-color);
    border-radius: 6px;
    margin-bottom: 10px;
    cursor: pointer;
    transition: all 0.3s ease;
}

.channel-item:hover {
    border-color: var(--accent-blue);
    background: var(--bg-primary);
}

.channel-item.active {
    border-color: var(--accent-blue);
    background: rgba(37, 99, 235, 0.1);
}

.channel-item-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 5px;
}

.channel-item-title {
    font-weight: 600;
    font-size: 15px;
}

.channel-type {
    padding: 3px 8px;
    border-radius: 12px;
    font-size: 11px;
    font-weight: 600;
    text-transform: uppercase;
}

.channel-type.police { background: rgba(37, 99, 235, 0.2); color: var(--accent-blue); }
.channel-type.fire { background: rgba(220, 38, 38, 0.2); color: var(--accent-red); }
.channel-type.ems { background: rgba(22, 163, 74, 0.2); color: var(--accent-green); }
.channel-type.aviation { background: rgba(234, 88, 12, 0.2); color: var(--accent-orange); }

.channel-item-details {
    display: flex;
    justify-content: space-between;
    color: var(--text-secondary);
    font-size: 13px;
}

/* Activity Feed */
.activity-feed {
    max-height: 400px;
    overflow-y: auto;
}

.activity-item {
    padding: 12px;
    background: var(--bg-tertiary);
    border-left: 3px solid var(--accent-blue);
    margin-bottom: 10px;
    border-radius: 4px;
}

.activity-time {
    color: var(--text-secondary);
    font-size: 12px;
    margin-bottom: 5px;
}

.activity-message {
    font-size: 14px;
}

/* Map */
#responder-map {
    border-radius: 8px;
    overflow: hidden;
    border: 1px solid var(--border-color);
}

.map-legend {
    background: var(--bg-tertiary);
    padding: 15px;
    border-radius: 6px;
}

.map-legend h3 {
    font-size: 16px;
    margin-bottom: 10px;
}

.legend-items {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 10px;
}

.legend-item {
    display: flex;
    align-items: center;
    gap: 10px;
}

.legend-marker {
    width: 20px;
    height: 20px;
    border-radius: 50%;
    border: 2px solid white;
}

.legend-marker.police { background: var(--accent-blue); }
.legend-marker.fire { background: var(--accent-red); }
.legend-marker.ems { background: var(--accent-green); }
.legend-marker.incident { background: var(--accent-orange); }

/* Incidents List */
.incidents-list {
    display: grid;
    gap: 15px;
}

.incident-card {
    background: var(--bg-tertiary);
    padding: 15px;
    border-radius: 6px;
    border-left: 4px solid var(--accent-orange);
}

.incident-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 10px;
}

.incident-type {
    font-weight: 600;
    font-size: 16px;
}

.incident-priority {
    padding: 4px 10px;
    border-radius: 12px;
    font-size: 12px;
    font-weight: 600;
}

.incident-priority.high { background: var(--accent-red); color: white; }
.incident-priority.medium { background: var(--accent-orange); color: white; }
.incident-priority.critical { background: #b91c1c; color: white; }

.incident-details {
    color: var(--text-secondary);
    font-size: 14px;
}

/* Pricing */
.pricing-header {
    text-align: center;
    margin-bottom: 40px;
}

.pricing-header h1 {
    font-size: 36px;
    margin-bottom: 10px;
}

.pricing-header p {
    color: var(--text-secondary);
    font-size: 18px;
}

.pricing-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 20px;
}

.pricing-card {
    background: var(--bg-secondary);
    border: 2px solid var(--border-color);
    border-radius: 10px;
    padding: 30px;
    text-align: center;
    transition: all 0.3s ease;
}

.pricing-card:hover {
    border-color: var(--accent-blue);
    transform: translateY(-5px);
}

.pricing-card.featured {
    border-color: var(--accent-blue);
    background: rgba(37, 99, 235, 0.05);
}

.pricing-name {
    font-size: 22px;
    font-weight: 700;
    margin-bottom: 10px;
}

.pricing-price {
    font-size: 32px;
    font-weight: 800;
    color: var(--accent-blue);
    margin-bottom: 5px;
}

.pricing-duration {
    color: var(--text-secondary);
    font-size: 14px;
    margin-bottom: 10px;
}

.pricing-savings {
    color: var(--accent-green);
    font-size: 13px;
    font-weight: 600;
    margin-bottom: 20px;
}

.pricing-features {
    list-style: none;
    text-align: left;
    margin: 25px 0;
}

.pricing-features li {
    padding: 8px 0;
    color: var(--text-secondary);
    font-size: 14px;
    display: flex;
    align-items: flex-start;
    gap: 10px;
}

.pricing-features li:before {
    content: "âœ“";
    color: var(--accent-green);
    font-weight: bold;
    flex-shrink: 0;
}

.pricing-btn {
    width: 100%;
    padding: 12px 24px;
    background: var(--accent-blue);
    color: white;
    border: none;
    border-radius: 6px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
}

.pricing-btn:hover {
    background: #1d4ed8;
    transform: scale(1.02);
}

/* Settings */
.settings-group {
    display: flex;
    flex-direction: column;
    gap: 20px;
}

.setting-item {
    padding: 15px;
    background: var(--bg-tertiary);
    border-radius: 6px;
    border: 1px solid var(--border-color);
}

.setting-label {
    display: flex;
    justify-content: space-between;
    align-items: center;
    cursor: pointer;
}

.toggle {
    width: 50px;
    height: 26px;
    position: relative;
    appearance: none;
    background: var(--bg-primary);
    border-radius: 13px;
    cursor: pointer;
    transition: background 0.3s ease;
}

.toggle:checked {
    background: var(--accent-blue);
}

.toggle:before {
    content: '';
    position: absolute;
    width: 22px;
    height: 22px;
    border-radius: 50%;
    background: white;
    top: 2px;
    left: 2px;
    transition: transform 0.3s ease;
}

.toggle:checked:before {
    transform: translateX(24px);
}

/* 10-Codes Grid */
.ten-codes-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 15px;
}

.ten-code-item {
    background: var(--bg-tertiary);
    padding: 12px;
    border-radius: 6px;
    border: 1px solid var(--border-color);
}

.ten-code {
    font-weight: 700;
    color: var(--accent-blue);
    font-size: 16px;
    margin-bottom: 5px;
}

.ten-code-meaning {
    color: var(--text-secondary);
    font-size: 13px;
}

/* Footer */
.footer {
    background: var(--bg-secondary);
    border-top: 1px solid var(--border-color);
    padding: 20px 0;
    text-align: center;
    color: var(--text-secondary);
    margin-top: 50px;
}

.footer a {
    color: var(--accent-blue);
    text-decoration: none;
}

.footer a:hover {
    text-decoration: underline;
}

/* Scrollbar Styling */
::-webkit-scrollbar {
    width: 8px;
    height: 8px;
}

::-webkit-scrollbar-track {
    background: var(--bg-primary);
}

::-webkit-scrollbar-thumb {
    background: var(--bg-tertiary);
    border-radius: 4px;
}

::-webkit-scrollbar-thumb:hover {
    background: var(--border-color);
}

/* Responsive Design */
@media (max-width: 768px) {
    .header-content {
        flex-direction: column;
    }

    .nav {
        width: 100%;
        justify-content: center;
    }

    .nav-btn {
        flex: 1;
        min-width: auto;
    }

    .pricing-grid {
        grid-template-columns: 1fr;
    }

    .ten-codes-grid {
        grid-template-columns: 1fr;
    }
}
